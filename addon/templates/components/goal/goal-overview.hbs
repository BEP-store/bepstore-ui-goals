<div class=goal_container>
  <div class="goal_con_upper" {{action "showDescr"}}>
    <div class="goal_title goal_left">
      {{model.title}}
      {{component 'bepstore-goals@badge/status-badge' status=model.status size="small"}}
    </div>
    <div class="goal_volunteers goal_right">
      Volunteers: {{model.contributors.length}}
    </div>
  </div>
  {{#if showAll}}
  <div class="goal_con_lower">
    <div class="goal_descr goal_left">
      <p>{{model.description}}</p>
      <div {{action "open"}}>
        {{#fbf-btn}}
          Go to Goal!
        {{/fbf-btn}}
      </div>
    </div>
    <div class="goal_coret goal_right">
      {{component 'bepstore-goals@goal/core-team' team=model}}
    </div>
  </div>
  {{/if}}
</div>
